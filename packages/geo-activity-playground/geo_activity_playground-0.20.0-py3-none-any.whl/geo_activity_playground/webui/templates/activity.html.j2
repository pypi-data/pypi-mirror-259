{% extends "page.html.j2" %}

{% block container %}
<div class="row mb-3">
    <div class="col">
        <h1>{{ activity["name"] }}</h1>
    </div>
</div>

<div class="row mb-3">
    <div class="col-4">
        <dl>
            <dt>Name</dt>
            <dd>{{ activity["name"] }}</dd>
            <dt>Kind</dt>
            <dd>{{ activity.kind }}</dd>
            <dt>Commute</dt>
            <dd>{{ activity.commute }}</dd>
            <dt>Distance</dt>
            <dd>{{ activity.distance_km|round(1) }} km</dd>
            <dt>Elapsed time</dt>
            <dd>{{ activity.elapsed_time }}</dd>
            <dt>Start time</dt>
            <dd>{{ activity.start }}</dd>
            <dt>Calories</dt>
            <dd>{{ activity.calories }}</dd>
            <dt>Equipment</dt>
            <dd>{{ activity.equipment }}</dd>
            <dt>ID</dt>
            <dd>{{ activity.id }}</dd>
            <dt>Source path</dt>
            <dd>{{ activity.path }}</dd>
        </dl>
    </div>
    <div class="col-8">
        <div id="activity-map" style="height: 500px;"></div>
        <script>
            var map = L.map('activity-map', {
                fullscreenControl: true
            });
            L.tileLayer('/tile/color/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);

            let geojson = L.geoJSON({{ color_line_geojson| safe }}, {
                style: function (feature) { return { color: feature.properties.color } }
            }).addTo(map)
            map.fitBounds(geojson.getBounds());
        </script>
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <h2>Distance & speed</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        {{ vega_direct("distance_time_plot", distance_time_plot) }}
    </div>
    <div class="col-md-4">
        {{ vega_direct("speed_time_plot", speed_time_plot) }}
    </div>
    <div class="col-md-4">
        {{ vega_direct("speed_distribution_plot", speed_distribution_plot) }}
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <h2>Altitude</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        {{ vega_direct("altitude_time_plot", altitude_time_plot) }}
    </div>
</div>

{% if heartrate_time_plot is defined %}
<div class="row mb-3">
    <div class="col">
        <h2>Heart rate</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        {{ vega_direct("heartrate_time_plot", heartrate_time_plot) }}
    </div>
    {% if heart_zones_plot is defined %}
    <div class="col-md-4">
        {{ vega_direct("heart_zones_plot", heart_zones_plot) }}
    </div>
    {% endif %}
</div>
{% endif %}

<div class="row mb-3">
    <div class="col">
        <h2>Share picture</h2>

        <img src="/activity/{{ activity.id }}/sharepic.png" />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <h2>Similar activities</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Hamming distance</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Distance / km</th>
                    <th>Elapsed time</th>
                </tr>
            </thead>
            <tbody>
                {% for distance, other_activities in similar_activites.items() %}
                {% for other_activity in other_activities %}
                <tr>
                    <td>{{ distance }}</td>
                    <td><a href="/activity/{{ other_activity.id }}">{{ other_activity["name"] }}</a></td>
                    <td>{{ other_activity.start }}</td>
                    <td>{{ other_activity.distance_km | round(1) }}</td>
                    <td>{{ other_activity.elapsed_time }}</td>
                </tr>
                {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}