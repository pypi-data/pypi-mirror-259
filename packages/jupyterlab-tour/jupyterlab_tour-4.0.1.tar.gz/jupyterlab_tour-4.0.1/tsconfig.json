{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "./",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "tsBuildInfoFile": "build/.cache/tsc/.root.tsbuildinfo"
  },
  "include": ["./package.json", "./schema/*.json"]
}
