extends layout

block content
  section.section
    .container
      h1.title.is-1 Root

      h4.title.is-4 List of streams

      ul.stream-list
        each stream in streams
          li.box
            a(href=url_for("streams.display", stream_id=stream.id))
              h5.title.is-5= stream.title
              p= stream.description

